{
	"name": "cli",
	"version": "1.0.0",
	"private": true,
	"workspaces": [
		"commands/*",
		"packages-wrikka-com/packages/*"
	],
	"scripts": {
		"dev": "turbo run build && turbo run dev",
		"build": "turbo run build",
		"test": "turbo run test",
		"lint": "bunx biome lint --write && bunx tsc --noEmit",
		"format": "bunx biome run format --write",
		"clean": "turbo run clean",
		"check:unused": "bunx knip",
		"update:deps": "bunx taze -r -w"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"turbo": "latest"
	},
	"packageManager": "bun@1.2.15"
}
